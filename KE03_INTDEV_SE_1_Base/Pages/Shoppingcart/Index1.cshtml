@page
@model KE03_INTDEV_SE_1_Base.Pages.Shoppingcart.Index1Model
@{
    ViewData["Title"] = "Winkelwagen";
}

<h1>Matrix Inc <br /> Webshop</h1>
<hr />
<h2>Winkelwagen</h2>
@if (Model.ShoppingCartItems != null && Model.ShoppingCartItems.Any())
{
    <table>
        <thead>
            <th>Artikel</th>
            <th>Productnummer</th>
            <th>Productnaam</th>
            <th>Omschrijving</th>
            <th>Kleur</th>
            <th>PrijsPerStuk</th>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingCartItems)
            {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.Productnaam" width="100" />
                    </td>
                    <td>@item.Productnummer</td>
                    <td>@item.Productnaam</td>
                    <td>@item.Omschrijving</td>
                    <td>@item.Kleur</td>
                    <td>@item.PrijsPerStuk</td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.ShoppingCartItems != null && Model.ShoppingCartItems.Any())
    {
        //Bestelknop
        <button class="btn btn-success" onclick="toonBevestiging()">Bestellen</button>

        //Bootstrap modal structuur
        <div id="bevestigPopup" class="d-none position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark bg-opacity-50">
            <div class="bg-white p-4 rounded text-center">
                <p>Weet je zeker dat je wilt bestellen?</p>
                <button class="btn btn-secondary me-2" onclick="sluitPopup()">Annuleren</button>
                
                <form method="post" style="display:inline;">
					<button type="submit" class="btn btn-primary">Afronden</button>
                </form>
            </div>
        </div>

        //Bootstrap modal inhoud
        <script>
            function toonBevestiging() {
                document.getElementById('bevestigPopup').classList.remove('d-none');
            }
            function sluitPopup() {
                document.getElementById('bevestigPopup').classList.add('d-none');
            }
        </script>
    }
}
else
{
    <p>Uw winkelwagen is leeg.</p>
}