@page
@model KE03_INTDEV_SE_1_Base.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Producten";
}

<h1>Matrix Inc <br /> Webshop</h1>
        <hr />
        <h2>Alle producten</h2>
        <table>
            <thead>
            <th>Artikel</th>
            <th>Productnummer</th>
            <th>Productnaam</th>
            <th>Omschrijving</th>
            <th>Kleur</th>
            <th>PrijsPerStuk</th>
            <th>Actie</th>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>
                            <img src="@product.ImageUrl" alt="@product.Productnaam" width="100" />
                        </td>
                        <td>@product.Productnummer</td>
                        <td>@product.Productnaam</td>
                        <td>@product.Omschrijving</td>
                        <td>@product.Kleur</td>
                        <td>@product.PrijsPerStuk</td>
                        <td>
                            <form method="post" asp-page-handler="VoegToeAanWinkelwagen" asp-route-productId="@product.Productnummer">
                                <button type="submit" class="btn btn-outline-dark">
                                    <i class="bi bi-cart-plus"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
<style>

    table {

        width: 100%;

        border-collapse: collapse;

        margin-top: 1rem;

    }

    th, td {

        border: 1px solid #ddd;

        padding: 0.75rem;

        text-align: left;

    }

    th {

        background-color: #f2f2f2;

    }

    h1 {

        font-size: 2rem;

        margin-bottom: 1rem;

    }
</style>

